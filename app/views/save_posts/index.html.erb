<div class='card text-center card-background saved'>
  <div class='inner-card-background'>
    <h2>saved posts</h2>
  </div>

<% @save_posts.reverse.each do |s| %>
<div class='card text-center card-background saved'>
  <div class='inner-card-background'>
  <% post = Post.find(s.post_id) %>
  <div><%= image_tag post.image.url(:medium) %></div>

    <h4><%= link_to "#{post.title}", "/groups/#{post.group_id}/posts/#{post.id}", class:"" %></h4>
    <% if post.price == 0 && post.request == false%>
      <div class='free-post'>FREE</div>
    <% elsif post.request == true %>
        <div class='request-post'>REQUEST</div>
    <% else %>
      <div>$<%= post.price%></div>
    <% end %>
    <div>
    <%= link_to 'delete', "/save_posts/#{s.id}",class: "btn btn-danger", method: :delete, data: { confirm: 'Are you sure?' } %>
  </div>
  </div>
</div>
<% end %>
