<h1>Groups#index</h1>
<p>Find me in app/views/groups/index.html.erb</p>
<%= form_tag("/groups", method: "get") do %>
  <%= label_tag(:q, "search groups") %>
  <%= text_field_tag(:q) %>
  <%= submit_tag "Search", name: nil %>
<% end %>

<% if teacher_signed_in? %>
<div>
  <div>your groups:</div>
    <% current_teacher.groups.each do |g|%>
      <div><%= link_to "#{g.name}", "/groups/#{g.id}", class:"" %></div>
    <%end%>
</div>
<%end%>
<hr>
<div>
  <div>new groups:</div>
  <% @groups.reverse.take(10).each do |g| %>
    <%= link_to "#{g.name}", "/groups/#{g.id}", class:"" %>
    <div><%= g.description %></div>
  <% end %>
</div>
