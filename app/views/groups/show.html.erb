<h1>Groups#show</h1>
<p>Find me in app/views/groups/show.html.erb</p>

<div><%= @group.name %></div>
<p><%= @group.description %></p>
<%= link_to "Edit Group", "/groups/#{@group.id}/edit", class:"" %>
<div>Created by:
  <%= link_to "#{Teacher.find(@group.teacher_id).username}", "/teachers/#{Teacher.find(@group.teacher_id).id}", class:"" %>
</div>

<%= form_for @membership do |f| %>
    <%= hidden_field_tag(:group_id, @group.id) %>
    <%= f.submit "join group"%>
<%end%>

<%= link_to 'leave group', membership_path(@membership_cancel), method: :delete,
                         data: { confirm: 'Are you sure?' } %>


<%= form_tag("/groups/#{@group.id}", method: "get") do %>
  <%= label_tag(:q_members, "search members") %>
  <%= text_field_tag(:q_members) %>
  <%= submit_tag "search", name: nil %>
<% end %>

<%= form_tag("/groups/#{@group.id}", method: "get") do %>
  <%= label_tag(:q_posts, "search posts") %>
  <%= text_field_tag(:q_posts) %>
  <%= submit_tag "search", name: nil %>
<% end %>

<div class="">members:
  <% @teachers.each do |t| %>
    <%= link_to "#{t.username}", "/teachers/#{t.id}", class:"" %>
  <% end %>
</div>

<div>
  <%= link_to "create post for #{@group.name}", "/groups/#{@group.id}/posts/new", class:"" %>
</div>

<% @posts.each do |o| %>
  <%= link_to "#{o.title}", "/groups/#{@group.id}/posts/#{o.id}", class:"" %>
  <div><%= o.description%></div>
  <div>$<%= o.price%></div>
<% end %>
