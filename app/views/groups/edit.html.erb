
<div class='card'>
  <h2>edit group</h2>

  <%= form_for @group do |f| %>
      <div>Name</div>
      <div><%= f.text_field :name %></div>
      <div>Description</div>
      <div><%= f.text_area :description %></div>
      <div class="field">
        <%= f.label :group_images %><br />
        <%= f.file_field :pictures, multiple:true, direct_upload: true %>
      </div>
      <div><%= f.submit "save changes"%></div>
      <%end%>

  <%= link_to 'Delete', group_path(@group), method: :delete, data:
  { confirm: 'Are you sure? This will delete all posts in the group.' } %>
</div>
