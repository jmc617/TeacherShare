<h1>Reviews#new</h1>
<p>Find me in app/views/reviews/new.html.erb</p>

<%= form_for @review do |f| %>
    <%= f.label :product %>
    <%= f.text_field :product %>

    <%= f.label :content %>
    <%= f.text_field :content %>

    <div class="field">
      <%= f.label :upload_images %><br />
      <%= f.file_field :pictures, multiple:true, direct_upload: true %>
    </div>

    <%= f.submit "create review"%>
    <%end%>
