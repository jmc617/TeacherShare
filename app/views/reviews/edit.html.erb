<% if @review.teacher_id == current_teacher.id %>
<div class="card text-center card-background">

<div class="inner-card-background">

  <h2>edit review</h2>

  <%= image_tag @review.image.url(:medium) %>

  <%= form_for(@review, multipart: true) do |f| %>
    <%= f.label :product %>
    <div><%= f.text_field :product %></div>

    <%= f.label :content %>
    <div><%= f.text_area :content %></div>

    <div >
      <%= f.label :image %>
      <%= f.file_field :image %>
    </div>


    <%= f.submit "create review"%>
  <%end%>

  <%= link_to 'Delete', review_path(@review), method: :delete, data:
  { confirm: 'Are you sure?' } %>
</div>
</div>

<% else %>

<h2>Sorry! You must be the owner of the review to edit</h2>

<% end %>
