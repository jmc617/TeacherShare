<div class="card text-center card-background">

<div class="inner-card-background">

<% if @post_comment.teacher_id == current_teacher.id %>
  <%= form_for [@group, @post, @post_comment] do |f| %>
      <div>Content</div>
      <div><%= f.text_area :content %></div>
      <div><%= f.submit "publish changes"%></div>
  <%end%>

<%= link_to 'Delete', group_post_post_comment_path(@post_comment), method: :delete,
                         data: { confirm: 'Are you sure?' } %>
<% else %>
  <h2>Sorry! You must be the owner of the comment to edit it.</h2>
<% end %>

</div>
</div>
