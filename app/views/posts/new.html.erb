
<% if @membership != nil %>

<%= form_for [@group, @post] do |f| %>
  <%= f.label :title%>
  <%= f.text_field :title %>
  <%= f.label :description%>
  <%= f.text_area :description %>
  <%= f.label :price%>
  <%= f.text_field :price, placeholder: 'put 0 if free' %>
  <div class="field">
    <%= f.label :upload_images %><br />
    <%= f.file_field :images, multiple:true, direct_upload: true %>
  </div>
  <%= hidden_field_tag(:group_id, :group_id) %>
  <%= f.submit "create post"%>
<%end%>

<% else %>

<h2> Sorry! Must be a member of this group to create posts. </h2>

<% end %>
